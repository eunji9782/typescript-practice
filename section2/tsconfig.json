{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleDetection": "force",
        "outDir": "dist",
        "strict": true,
        "moduleResolution" : "Node",
        "preserveValueImports": false,
        //"strictNullChecks": false
    },
    "include": ["src"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
    }
}